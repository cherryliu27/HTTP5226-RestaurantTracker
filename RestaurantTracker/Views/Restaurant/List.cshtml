﻿@model IEnumerable<RestaurantTracker.Models.RestaurantDto>
@{
    ViewBag.Title = "List";
}

<div class="rest-list-header">
    <h2>List of Restaurants</h2>
</div>
@*<p><a href="/Branch/List">List of All Restaurant branches</a></p>*@

@*<form action="/Restaurant/List" method="GET">
        <input type="text" name="SearchKey" placeholder="Search Restaurant Name" />
        <button type="submit">Search</button>
    </form>*@

<button style="margin-top:1rem;" type="button" class="btn btn-primary"><a href="/Restaurant/Add" class="restaurant-add">Add Restaurant</a></button>

<form class="form-inline search-bar" method="GET" action="/Restaurant/List">
    <div class="input-group">
        <input class="form-control" type="search" placeholder="Search Restaurant Name" aria-label="Search" name="SearchKey">
        <div class="input-group-append" style="margin-left: 0.5rem">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </div>
    </div>
</form>


<table class="table  table-striped">
    <thead>
        <tr>
            <th scope="col">Restaurant Name</th>
            <th scope="col">Restaurant Type</th>
            <th scope="col">Cuisine</th>
            <th scope="col">Budget</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var restaurant in Model)
        {
            <tr>
                <th scope="row"><a href="/Restaurant/Details/@restaurant.RestaurantId">@restaurant.RestaurantName</a></th>
                <td>@restaurant.RestaurantType</td>
                <td>@restaurant.Cuisine</td>
                <td>$@restaurant.Budget</td>
            </tr>
        }
    </tbody>
</table>

<link rel="stylesheet" href="~/Content/Site.css" />