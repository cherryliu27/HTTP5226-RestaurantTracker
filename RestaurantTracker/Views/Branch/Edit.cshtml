﻿@model RestaurantTracker.Models.BranchDto

@{
    ViewBag.Title = "Edit";
}


<h2>Edit Branch</h2>

<form method="POST" action="/Branch/Update/@Model.BranchId">
    <div style="display:none">
        <input type="text" name="BranchId" value="@Model.BranchId" />
    </div>
    <div style="display:none">
        <input type="text" name="RestaurantId" value="@Model.RestaurantId" />
    </div>
    <div>
        <label for="status">Status: </label>
        <input type="text" id="status" name="Status" value="@Model.Status" />
    </div>
    <div>
        <label for="review">Review: </label>
        <input type="text" id="review" name="Review" value="@Model.Review" />
    </div>
    <div>
        <label for="location">Location: </label>
        <input type="text" id="location" name="Location" value="@Model.Location" />
    </div>
    <div>
        <label for="address">Address: </label>
        <input type="text" name="address" value="@Model.Address" />
    </div>
    <div>
        <input type="submit" value="Update" />
    </div>


</form>

<a href="/Restaurant/Details/@Model.RestaurantId">Cancel</a>
